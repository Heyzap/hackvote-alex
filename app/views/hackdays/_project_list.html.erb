<% if hackday.votable %>
  <ul>
    <% hackday.projects.each do |proj| %>
      <% if proj.valid? %>
        <li>
          <span class="project-details">
            <b><%= proj.name %></b> (by <%= proj.creators %>)
          </span>
          <% if cookies[:"votes_#{hackday.id}"].to_i < 3  # where to store this value %>
            <span class="project-votes">
              <%= form_for(proj) do |f| %>
                <%= f.submit "Vote" %>
              <% end %>
            </span>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <ul>
    <% projs = hackday.projects.sort_by { |proj| -proj.votes } %>
    <% projs.each do |proj| %>
      <% if proj.valid? %>
        <li>
          <span class="project-details">
            <b><%= proj.name %></b> (by <%= proj.creators %>)
          </span>
          <span class="project-votes">
            -- <%= proj.votes %> votes
          </span>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
